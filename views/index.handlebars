<h1>Burgers!</h1>

<h2>make a burger!</h2>

<ul>
    <div>
  {{#each burgers}}
  {{#unless devoured}}
  <p>
  {{this.id}}. {{this.burger_name}}
  <button data-id="{{this.id}}" class="burgerPUT">Devour it</button>
  </p>
 {{/unless}}
  {{/each}}
    </p>
</ul>
</div>
<ul>
    <div>
      <h2>devoured</h2>
  {{#each burgers}}
  {{#if devoured}}
  <p>
  {{this.id}}. {{this.burger_name}}
 
  </p>
  {{/if}}
